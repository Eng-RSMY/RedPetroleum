@model RedPetroleum.Models.Entities.TaskList

@{
    ViewBag.Title = "Задачи";
}

<h2>Добавление задачи</h2>

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-3">
            <label for="employee">Выберите сотрудника</label>
        </div>
        <div class="col-md-3">
            @Html.DropDownList("EmployeeId", null, "Выберите сотрудника", htmlAttributes: new { @class = "form-control", @id = "employeesDropdown", onchange = "submitParamsToIndexPage(true)" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label for="taskDate">Выберите месяц</label>
        </div>
        <div class="col-md-3">
            <input class="form-control" id="taskDate" type="month" name="taskDate" value="@ViewBag.SelectedDate" onchange="submitDateToIndexPage(false)">
        </div>
    </div>
</div>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Назначен</th>
            <th>Задача</th>
            <th>Продолжительность</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody id="taskList">
        <span class="text-center" id="emptyTaskList"><b><i>Добавьте задачу</i></b></span>
    </tbody>
</table>
<div id="createArea">

</div>

<hr />
<div class="form-group">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-success col-md-12" onclick="addTask()"><i class="fa fa-plus" aria-hidden="true" title="Добавить задачу</" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Добавить задачу</</span></i></button>
    </div>
</div>
<div class="form-group">
    <div class="btn-group" role="group">
        <a href="#" id="getIndex" class="btn btn-info" onclick="submitParamsToIndexPage(false)"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Назад</span></i></a>
    </div>
</div>
<br /><br />
<script src="~/Scripts/app.js"></script>

<script>
    saveOnEnter();
</script>

<script>
    $(function(){
        $("#employeesDropdown").chosen();
    })
</script>