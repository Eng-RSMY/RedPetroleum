@model RedPetroleum.Models.Entities.TaskList

@{
    ViewBag.Title = "Задачи";
}

<h2>Добавление задач</h2>

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Добавьте задачи</h4>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <label for="employee">Выберите сотрудника</label>
        </div>
        <div class="col-md-10">
            @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control", @id = "employeesDropdown" })
        </div>
    </div>
    <hr />

    <div class="row" id="taskList">
        <div class="text-center" id="emptyTaskList"><b><i>Добавьте задачу</i></b></div>
    </div>
</div>

<hr />
<button type="button" class="btn btn-default col-md-12" onclick="addTask()"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить задачу</button>

<br /><br />
<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/app.js")

    <script>
        saveOnEnter();
    </script>
}
