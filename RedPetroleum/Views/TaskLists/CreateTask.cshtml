<tr class="createdTask" id="@ViewBag.Task.TaskListId">
    <td class="taskPerformer">@ViewBag.EmployeeName</td>
    <td class="taskName">@ViewBag.Task.TaskName</td>
    <td class="taskDuration">@ViewBag.Task.TaskDuration</td>
    <td class="taskDate">@ViewBag.TaskDate</td>
    <td>
        <button class="btn btn-primary" type="button" onclick="editTask(true, '@ViewBag.Task.TaskListId')"><i class="fa fa-pencil" aria-hidden="true" title="Редактировать" data-toggle="tooltip" data-placement="top"></i></button>
        <button type="button" class="btn btn-danger removeTask" onclick="removeTask('@ViewBag.Task.TaskListId')"><i class="fa fa-times" title="Удалить" aria-hidden="true"></i></button>
    </td>
</tr>