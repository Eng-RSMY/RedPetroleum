@model RedPetroleum.Models.Entities.Visitation

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Visitation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Имя сотрудника
        </dt>

        <dd>
            @ViewBag.EmployeeName
        </dd>

        <dt>
            Отдел
        </dt>

        <dd>
            @ViewBag.DepName
        </dd>

        <dt>
            Дата оценки
        </dt>

        <dd>
            @(((DateTime)Model.Date).ToString("MMMM.yyyy"))
        </dd>

        <dt>
            Оценка
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VisitMark)
        </dd>

    </dl>
</div>
<div class="form-group">
    <div class="btn-group" role="group">
        <a href="@Url.Action("Edit", "Visitations", new { id = Model.Id})" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true" title="Редактировать" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Редактировать</span></i></a>
        <a href="@Url.Action("Index", "Visitations")" class="btn btn-info"><i class="fa fa-arrow-left" aria-hidden="true" title="Назад" data-toggle="tooltip" data-placement="top"><span style="padding: 5px;">Назад</span></i></a>
    </div>
</div>
